---
import NavBar from "../components/NavBar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="crt min-h-screen">
		<NavBar />
		<slot />
		<script>
			function generateFlicker() {
				const keyframes = Array.from({ length: 90 }, (_, i) => {
					const opacity = Math.random() * 0.11 + 0.89;
					const offset = `${i}%`;
					return `${offset} { opacity: ${opacity}; }`;
				});
				return `@keyframes flicker { ${keyframes.join(" ")} }`;
			}

			function applyFlickerAnimation() {
				const styleElement = document.createElement("style");
				styleElement.textContent = generateFlicker();
				document.head.appendChild(styleElement);
			}

			window.onload = applyFlickerAnimation;
		</script>
	</body>
</html>

<style is:global>
	/* Base styles */
	html {
		font-size: 16px; /* Base font size */
	}
	body {
		font-family: "Courier New", Courier, monospace;
		margin: 0;
		padding: 0;
	}
	.crt {
		background-color: black;
		color: #41ff00;
		text-shadow:
			0 0 2px #41ff00,
			0 0 4px #41ff00;
		animation: flicker 1s infinite;
	}
	.crt::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: repeating-linear-gradient(
			transparent,
			transparent 0,
			rgba(0, 0, 0, 0.1) 1px,
			rgba(0, 0, 0, 0.7) 2px
		);
		pointer-events: none;
	}

	/* Media Queries */
	@media (max-width: 640px) {
		.text-5xl {
			font-size: 2.5rem;
		}
		.text-4xl {
			font-size: 2rem;
		}
		.text-3xl {
			font-size: 1.875rem;
		}
		.text-2xl {
			font-size: 1.5rem;
		}
		.text-xl {
			font-size: 1.25rem;
		}
		.w-10 {
			width: 2.5rem;
		}
		.h-10 {
			height: 2.5rem;
		}
	}
</style>
