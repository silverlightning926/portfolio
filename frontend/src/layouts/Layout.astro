---
import NavBar from "../components/NavBar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="crt flickering-text">
		<NavBar />
		<main>
			<slot />
		</main>
		<script>
			function generateFlicker() {
				const keyframes = Array.from({ length: 90 }, (_, i) => {
					const opacity = Math.random() * 0.1 + 0.9;
					const offset = `${i}%`;
					return `${offset} { opacity: ${opacity}; }`;
				});
				return `@keyframes flicker { ${keyframes.join(" ")} }`;
			}

			function applyFlickerAnimation() {
				const styleElement = document.createElement("style");
				styleElement.textContent = generateFlicker();
				document.head.appendChild(styleElement);
			}

			window.onload = applyFlickerAnimation;
		</script>
	</body>
</html>

<style is:global>
	html {
		font-family: "Courier New", Courier, monospace;
		line-height: 1.5;
	}
	body.crt {
		margin: 20px;
		background-color: black;
		color: #41ff00;
		text-shadow:
			0 0 2px #41ff00,
			0 0 4px #41ff00;
		filter: blur(0.4px);
	}
	body.crt::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: repeating-linear-gradient(
			transparent,
			transparent 0,
			rgba(0, 0, 0, 0.1) 1px,
			rgba(0, 0, 0, 0.7) 2px
		);
		pointer-events: none;
	}
	.crt {
		filter: contrast(1.2) blur(0.3px);
		animation: flicker 0.3s infinite;
	}
</style>
