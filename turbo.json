{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"backend#dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true,
			"env": ["BACKEND_PORT", "MONGO_URI", "CORS_ORIGIN"]
		},
		"frontend#dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true,
			"env": ["VITE_API_URL"]
		},
		"format": {
			"outputLogs": "none",
			"outputs": []
		},
		"format:check": {
			"outputLogs": "none",
			"outputs": []
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**/*"]
		},
		"backend#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**/*"],
			"env": ["BACKEND_PORT", "MONGO_URI", "CORS_ORIGIN"]
		},
		"frontend#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**/*"],
			"env": ["VITE_API_URL"]
		},
		"serve": {
			"dependsOn": ["build"],
			"persistent": true
		},
		"backend#serve": {
			"dependsOn": ["backend#build"],
			"persistent": true,
			"env": ["BACKEND_PORT", "MONGO_URI", "CORS_ORIGIN"]
		},
		"frontend#serve": {
			"dependsOn": ["frontend#build"],
			"persistent": true,
			"env": ["VITE_API_URL"]
		}
	},
	"globalDependencies": ["tsconfig.base.json", ".prettierrc"]
}
